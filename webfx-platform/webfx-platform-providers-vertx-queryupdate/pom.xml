<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>webfx-platform</artifactId>
        <groupId>org.webfx</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>webfx-platform-providers-vertx-queryupdate</artifactId>

    <dependencies>

        <dependency>
            <artifactId>webfx-platform-shared-query</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <artifactId>webfx-platform-shared-update</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <artifactId>webfx-platform-server-updatelistener</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <artifactId>webfx-platform-providers-vertx-instance</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <groupId>io.vertx</groupId>
            <artifactId>vertx-mysql-postgresql-client</artifactId>
        </dependency>

        <dependency>
            <groupId>io.vertx</groupId>
            <artifactId>vertx-jdbc-client</artifactId>
        </dependency>

        <!-- Required by vertx-mysql-postgresql-client -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.15</version>
            <scope>runtime</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <!-- Generating module-info.java from maven dependencies -->
            <plugin>
                <groupId>org.moditect</groupId>
                <artifactId>moditect-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-module-infos</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>add-module-infos-overridden</id>
                        <phase>package</phase>
                        <goals>
                            <goal>add-module-info</goal>
                        </goals>
                        <configuration>
                            <modules>
                                <module>
                                    <artifact>
                                        <groupId>com.github.mauricio</groupId>
                                        <artifactId>db-async-common_2.12</artifactId>
                                        <version>0.2.21</version>
                                    </artifact>
                                    <moduleInfo>
                                        <name>com.github.mauricio.db.async.common</name>
                                    </moduleInfo>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.github.mauricio</groupId>
                                        <artifactId>postgresql-async_2.12</artifactId>
                                        <version>0.2.21</version>
                                    </artifact>
                                    <moduleInfo>
                                        <name>com.github.mauricio.postgresql.async</name>
                                    </moduleInfo>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.github.mauricio</groupId>
                                        <artifactId>mysql-async_2.12</artifactId>
                                        <version>0.2.21</version>
                                    </artifact>
                                    <moduleInfo>
                                        <name>com.github.mauricio.mysql.async</name>
                                    </moduleInfo>
                                </module>
                            </modules>
                            <module>
                                <moduleInfoSource>
                                    module webfx.platform.providers.vertx.queryupdate {
                                        requires com.github.mauricio.postgresql.async;
                                        requires com.github.mauricio.mysql.async;
                                        // TODO: complete this module definition
                                    }
                                </moduleInfoSource>
                            </module>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

</project>