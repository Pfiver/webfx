        <dependency>
            <artifactId>webfx-fxkits-extra</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <artifactId>webfx-lib-rxjava</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <!-- Dependency used for drop down button decoration (only) -->
        <dependency>
            <artifactId>webfx-lib-controlsfx-validation</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>

            <!-- Calling the Java CUP plugin to generate JavaCupExpressionParser.java and ExpressionSymbols.java from the ExpressionParser.cup grammar file -->
            <plugin>
                <groupId>com.github.vbmacher</groupId>
                <artifactId>cup-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>expression-parser</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <cupDefinition>src/main/java/webfx/framework/expression/parser/javacup/ExpressionParser.cup</cupDefinition>
                            <outputDirectory>src/main/java/</outputDirectory>
                            <className>JavaCupExpressionParser</className>
                            <symbolsName>ExpressionSymbols</symbolsName>
                            <packageName>webfx.framework.expression.parser.javacup</packageName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Calling the JFlex plugin to generate ExpressionLexer.java from the ExpressionLexer.flex lexical file -->
            <plugin>
                <groupId>de.jflex</groupId>
                <artifactId>jflex-maven-plugin</artifactId>
                <configuration>
                    <outputDirectory>src/main/java</outputDirectory>
                    <lexDefinitions>
                        <lexDefinition>src/main/java/webfx/framework/expression/parser/jflex/ExpressionLexer.flex</lexDefinition>
                    </lexDefinitions>
                </configuration>
            </plugin>

            <!-- Generating the source artifact for GWT compilation -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>

            <!-- Relocating the java_cup package to avoid a version conflict that makes TeaVM compilation fail (TeaVM has a dependency on xalan which includes an incompatible version of java_cup) -->
            <!--plugin>
