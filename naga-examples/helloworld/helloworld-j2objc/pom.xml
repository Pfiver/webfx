<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>helloworld</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>helloworld-j2objc</artifactId>

    <dependencies>

        <dependency>
            <groupId>naga</groupId>
            <artifactId>helloworld-logic</artifactId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>

    <properties>
        <!-- Skipping the artifact installation by default (in case the profile is not activated) -->
        <plugin.install.param.skip>true</plugin.install.param.skip>
    </properties>

    <profiles>
        <!-- profile to transpile the java code into javascript using GWT -->
        <profile>
            <id>j2objc</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <!-- Not skipping the artifact installation when the profile is activated -->
                <plugin.install.param.skip>false</plugin.install.param.skip>
                <!-- Avoiding size consuming META-INF/maven/** coming dependencies (useless for this artifact) -->
                <plugin.jar.param.addMavenDescriptor>false</plugin.jar.param.addMavenDescriptor>
                <!-- Setting the J2objc plugin configuration parameters -->
                <plugin.j2objc.param.javaSourceFiles>helloworld.j2objc.HelloWorldJ2ObjCApplication.java</plugin.j2objc.param.javaSourceFiles>
            </properties>

            <build>
                <plugins>

                    <!-- unpacking dependencies with their source before calling j2objc -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                    </plugin>

                    <!-- Running ant to call j2objc over each java file -->
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>