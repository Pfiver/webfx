<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>helloworld</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>helloworld-gwt</artifactId>
    <packaging>war</packaging>

    <dependencies>

        <dependency>
            <groupId>naga</groupId>
            <artifactId>helloworld-logic</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
        </dependency>

    </dependencies>

    <properties>
        <!-- Skipping the artifact installation by default (in case the profile is not activated) -->
        <param.install.skip>true</param.install.skip>
    </properties>

    <profiles>
        <!-- profile to transpile the java code into javascript using GWT -->
        <profile>
            <id>gwt</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <!-- Not skipping the artifact installation when the profile is activated -->
                <param.install.skip>false</param.install.skip>
                <!-- Avoiding size consuming META-INF/maven/** coming dependencies (useless for this artifact) -->
                <param.jar.addMavenDescriptor>false</param.jar.addMavenDescriptor>
                <!-- Setting the GWT plugin configuration parameters -->
                <param.gwt.module>helloworld-gwt</param.gwt.module>
                <param.gwt.compileSourcesArtifact1>${project.groupId}:helloworld-logic</param.gwt.compileSourcesArtifact1>
            </properties>

            <build>
                <plugins>
                    <!-- Calling the GWT maven plugin to compile the gwt module into javascript -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>