<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>hellonaga</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>hellonaga-gwt</artifactId>

    <dependencies>

        <dependency>
            <artifactId>hellonaga-logic</artifactId>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-gwt</artifactId>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>

    <properties>
        <!-- Skipping the artifact installation by default (in case the profile is not activated) -->
        <plugin.install.param.skip>true</plugin.install.param.skip>
    </properties>

    <profiles>
        <!-- profile to transpile the java code into javascript using GWT -->
        <profile>
            <id>gwt</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <!-- Not skipping the artifact installation when the profile is activated -->
                <plugin.install.param.skip>false</plugin.install.param.skip>
                <!-- Avoiding size consuming META-INF/maven/** coming dependencies (useless for this artifact) -->
                <plugin.jar.param.addMavenDescriptor>false</plugin.jar.param.addMavenDescriptor>
                <!-- Setting the GWT plugin configuration parameters -->
                <plugin.gwt.param.module>hellonaga</plugin.gwt.param.module>
                <plugin.gwt.param.compileSourcesArtifact1>${project.groupId}:hellonaga-logic</plugin.gwt.param.compileSourcesArtifact1>
                <plugin.gwt.param.compileSourcesArtifact2>${project.groupId}:naga-core</plugin.gwt.param.compileSourcesArtifact2>
                <plugin.gwt.param.compileSourcesArtifact3>${project.groupId}:naga-gwt</plugin.gwt.param.compileSourcesArtifact3>
            </properties>

            <build>
                <plugins>
                    <!-- Calling the GWT maven plugin to compile the gwt module into javascript -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>