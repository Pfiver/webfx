<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>hellonaga</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>hellonaga-gwt</artifactId>

    <dependencies>

        <dependency>
            <artifactId>hellonaga-logic</artifactId>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-gwt</artifactId>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
        </dependency>

    </dependencies>

    <properties>
        <!-- Skipping the artifact installation by default (in case the profile is not activated) -->
        <install.skip>true</install.skip>
    </properties>

    <profiles>
        <!-- profile to transpile the java code into javascript using GWT -->
        <profile>
            <id>gwt</id>

            <properties>
                <!-- Not skipping the artifact installation when the profile is activated -->
                <install.skip>false</install.skip>
                <!-- Avoiding size consuming META-INF/maven/** coming dependencies (useless for this artifact) -->
                <jar.addMavenDescriptor>false</jar.addMavenDescriptor>
                <!-- Setting the GWT plugin configuration parameters -->
                <gwt.module>hellonaga</gwt.module>
                <gwt.compileSourcesArtifact3>${project.groupId}:naga-core</gwt.compileSourcesArtifact3>
                <gwt.compileSourcesArtifact2>${project.groupId}:naga-gwt</gwt.compileSourcesArtifact2>
                <gwt.compileSourcesArtifact>${project.groupId}:hellonaga-logic</gwt.compileSourcesArtifact>
            </properties>

            <build>
                <plugins>
                    <!-- Calling the GWT maven plugin to compile the gwt module into javascript -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>