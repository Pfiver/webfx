<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>hellonaga</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>hellonaga-android</artifactId>
    <packaging>apk</packaging>

    <dependencies>

        <dependency>
            <artifactId>hellonaga-retrolambda</artifactId>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
            <exclusions>
                <!-- doesn't work
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
                -->
                <!-- So excluding manually all transitive dependencies -->
                <exclusion>
                    <groupId>naga</groupId>
                    <artifactId>hellonaga-logic</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>naga</groupId>
                    <artifactId>naga-core</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>naga</groupId>
                    <artifactId>naga-javaplat</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>naga</groupId>
                    <artifactId>naga-android</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>net.minidev</groupId>
                    <artifactId>json-smart</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.java-websocket</groupId>
                    <artifactId>Java-WebSocket</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Android -->
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
        </dependency>

    </dependencies>

    <properties>
        <java.version>7</java.version>
        <!-- Skipping the artifact installation by default (in case the profile is not activated) -->
        <param.compiler.phase>none</param.compiler.phase>
        <param.android.generate-sources.phase>none</param.android.generate-sources.phase>
        <param.android.process-classes.phase>none</param.android.process-classes.phase>
        <parem.android.prepare-package.phase>none</parem.android.prepare-package.phase>
        <param.android.package.phase>none</param.android.package.phase>
        <param.android.internal-pre-integration-test.phase>none</param.android.internal-pre-integration-test.phase>
        <param.android.internal-integration-test.phase>none</param.android.internal-integration-test.phase>
        <param.android.install.phase>none</param.android.install.phase>
        <param.install.skip>true</param.install.skip>
    </properties>

    <profiles>
        <profile>
            <id>android</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <properties>
                <!-- Not skipping the artifact installation when the profile is activated -->
                <param.compiler.phase>compile</param.compiler.phase>
                <param.android.generate-sources.phase>generate-sources</param.android.generate-sources.phase>
                <param.android.process-classes.phase>process-classes</param.android.process-classes.phase>
                <parem.android.prepare-package.phase>prepare-package</parem.android.prepare-package.phase>
                <param.android.package.phase>package</param.android.package.phase>
                <param.android.internal-pre-integration-test.phase>pre-integration-test</param.android.internal-pre-integration-test.phase>
                <param.android.internal-integration-test.phase>integration-test</param.android.internal-integration-test.phase>
                <param.android.install.phase>install</param.android.install.phase>
                <param.install.skip>false</param.install.skip>
            </properties>

        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>com.simpligility.maven.plugins</groupId>
                <artifactId>android-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>