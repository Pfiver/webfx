<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>hellonaga</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>hellonaga-android</artifactId>
    <packaging>apk</packaging>

    <dependencies>

        <dependency>
            <artifactId>hellonaga-retrolambda</artifactId>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
            <!-- Removing all transitive dependencies declared in maven as they are actually already embed in the retrolambda artifact -->
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Android -->
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
        </dependency>

    </dependencies>

    <properties>
        <!-- Compiling the android code in java 7 (java 8 not supported) -->
        <java.version>7</java.version>
        <!-- Skipping the artifact installation by default (in case the profile is not activated) -->
        <plugin.compiler.param.phase>none</plugin.compiler.param.phase>
        <plugin.android.param.phase.generate-sources>none</plugin.android.param.phase.generate-sources>
        <plugin.android.param.phase.process-classes>none</plugin.android.param.phase.process-classes>
        <plugin.android.param.phase.prepare-package>none</plugin.android.param.phase.prepare-package>
        <plugin.android.param.phase.package>none</plugin.android.param.phase.package>
        <plugin.android.param.phase.internal-pre-integration-test>none</plugin.android.param.phase.internal-pre-integration-test>
        <plugin.android.param.phase.internal-integration-test>none</plugin.android.param.phase.internal-integration-test>
        <plugin.android.param.phase.install.phase>none</plugin.android.param.phase.install.phase>
        <plugin.install.param.skip>true</plugin.install.param.skip>
    </properties>

    <profiles>
        <profile>
            <id>android</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <properties>
                <!-- Not skipping the artifact installation when the profile is activated -->
                <plugin.compiler.param.phase>compile</plugin.compiler.param.phase>
                <plugin.android.param.phase.generate-sources>generate-sources</plugin.android.param.phase.generate-sources>
                <plugin.android.param.phase.process-classes>process-classes</plugin.android.param.phase.process-classes>
                <plugin.android.param.phase.prepare-package>prepare-package</plugin.android.param.phase.prepare-package>
                <plugin.android.param.phase.package>package</plugin.android.param.phase.package>
                <plugin.android.param.phase.internal-pre-integration-test>pre-integration-test</plugin.android.param.phase.internal-pre-integration-test>
                <plugin.android.param.phase.internal-integration-test>integration-test</plugin.android.param.phase.internal-integration-test>
                <plugin.android.param.phase.install.phase>install</plugin.android.param.phase.install.phase>
                <plugin.install.param.skip>false</plugin.install.param.skip>
            </properties>

        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>com.simpligility.maven.plugins</groupId>
                <artifactId>android-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>