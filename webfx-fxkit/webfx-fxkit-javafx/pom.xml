<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>webfx-fxkit</artifactId>
        <groupId>org.webfx</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>webfx-fxkit-javafx</artifactId>

    <dependencies>

        <dependency>
            <artifactId>webfx-fxkit-launcher</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <artifactId>webfx-fxkit-mapper</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <artifactId>webfx-fxkit-extra</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-web</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- SVG support for JavaFx -->

        <dependency> <!-- This module is actually not used by webfx-fxkit-javafx but it is listed here (above javafxsvg) because javafxsvg uses an older version of javacup (ie < 11b) that may interfere with other modules (such as webfx-platforms-xxx or webfx-framework-xxx modules) that requires javacup 11b API -->
            <artifactId>webfx-lib-javacupruntime</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <artifactId>javafxsvg</artifactId>
            <groupId>de.codecentric.centerdevice</groupId>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <!-- Generating module-info.java from maven dependencies -->
            <plugin>
                <groupId>org.moditect</groupId>
                <artifactId>moditect-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-module-infos</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>add-module-infos-overridden</id>
                        <phase>package</phase>
                        <goals>
                            <goal>add-module-info</goal>
                        </goals>
                        <configuration>
                            <module>
                                <moduleInfoSource>
                                    module webfx.fxkit.javafx {
                                    // TODO: complete this module definition
                                    }
                                </moduleInfoSource>
                            </module>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

</project>