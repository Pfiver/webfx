<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>webfx-fxkit</artifactId>
        <groupId>org.webfx</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>webfx-fxkit-gwt</artifactId>

    <dependencies>

        <dependency>
            <artifactId>webfx-fxkits-extra</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
            <classifier>emul</classifier>
        </dependency>

        <dependency>
            <artifactId>webfx-fxkits-core</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
            <classifier>emul</classifier>
        </dependency>

        <dependency>
            <artifactId>webfx-fxkits-emul-javafxcontrols</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <groupId>com.google.elemental2</groupId>
            <artifactId>elemental2-core</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.elemental2</groupId>
            <artifactId>elemental2-dom</artifactId>
        </dependency>

        <!-- TODO: remove this dependency (using only ResourceService in HtmlImageViewPeer ) -->
        <dependency>
            <artifactId>webfx-platform-gwt</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
        </dependency>

        <dependency>
            <groupId>com.googlecode.gwt-charts</groupId>
            <artifactId>gwt-charts</artifactId>
        </dependency>

    </dependencies>

    <properties>
        <!-- Disabling the default behaviour defined in the parent pom for the dependency plugin -->
        <plugin.dependency.param.unpack-sources.phase>none</plugin.dependency.param.unpack-sources.phase>
        <plugin.dependency.param.unpack-classes.phase>none</plugin.dependency.param.unpack-classes.phase>
        <plugin.dependency.param.copy-libs.phase>none</plugin.dependency.param.copy-libs.phase>
    </properties>

    <build>
        <plugins>

            <!-- Generating the source artifact for GWT compilation -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>

            <!-- Relocating the emul.javafx package to java for both classes and sources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
            </plugin>
        </plugins>
    </build>


</project>