        </dependency>

        <dependency>
            <artifactId>webfx-platforms-web-clientbus</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>webfx-platform-gwt-json</artifactId>
