            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>webfx-platform-gwt-websocket</artifactId>
            <groupId>${webfx.groupId}</groupId>
            <version>${webfx.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
