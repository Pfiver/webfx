<module rename-to="mongoose_client_application_gwt">

    <!-- Specifying the paths for translatable code -->
    <source path="mongoose/client/application/gwt"/>

    <resource path="images"/>

    <!-- Declaring application properties so they can be accessed through System.getProperty()  -->
    <!-- Note: these properties are set with the -setProperty GWT compiler argument when calling the GWT plugin in the root pom.xml -->
    <define-configuration-property name="application.name" is_multi_valued="false"/>
    <define-configuration-property name="application.version" is_multi_valued="false"/>
    <define-configuration-property name="application.build.tool" is_multi_valued="false"/>
    <define-configuration-property name="application.build.number" is_multi_valued="false"/>
    <define-configuration-property name="application.build.timestamp" is_multi_valued="false"/>

</module>
