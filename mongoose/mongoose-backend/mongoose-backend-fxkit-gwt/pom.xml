<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>naga</groupId>
        <artifactId>mongoose-backend</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>mongoose-backend-fxkit-gwt</artifactId>
    <packaging>gwt-app</packaging>

    <dependencies>

        <!-- Now listing the sources for GWT compilation -->
        <dependency>
            <artifactId>mongooses-web</artifactId>
            <groupId>${mongoose.groupId}</groupId>
            <version>${mongoose.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>mongooses-core</artifactId>
            <groupId>${mongoose.groupId}</groupId>
            <version>${mongoose.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>webfx-lib-mvvmfx-validation</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>webfx-lib-controlsfx-validation</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>webfx-framework</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>webfx-fxkit-gwt</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>shaded-sources</classifier>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-dev</artifactId>
        </dependency>

    </dependencies>

    <properties>
        <java.version>8</java.version>
        <!-- Setting the GWT plugin configuration parameters -->
        <plugin.gwt.param.module>mongoose-backend-fxkit-gwt</plugin.gwt.param.module>
        <plugin.gwt.param.skipCompilation>true</plugin.gwt.param.skipCompilation>
        <!-- Changing parameters to speed up compilation time while in development -->
        <plugin.gwt.param.draftCompile>true</plugin.gwt.param.draftCompile>
        <plugin.gwt.param.optimize>0</plugin.gwt.param.optimize>
        <!-- Avoiding size consuming META-INF/maven/** coming dependencies (useless for this artifact) -->
        <plugin.jar.param.addMavenDescriptor>false</plugin.jar.param.addMavenDescriptor>
        <!-- But unpacking webroot resources coming from dependencies such as webfx-platforms-web -->
        <plugin.dependency.param.unpack-sources.phase>none</plugin.dependency.param.unpack-sources.phase>
        <plugin.dependency.param.unpack-classes.phase>none</plugin.dependency.param.unpack-classes.phase>
        <plugin.dependency.param.copy-libs.phase>none</plugin.dependency.param.copy-libs.phase>
    </properties>

    <build>
        <plugins>

            <!-- Generating the source artifact for another GWT compilation (ex: KBS) -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <type>jar</type>
                    </archive>
                </configuration>
            </plugin>

            <!-- Calling the GWT maven plugin to compile the gwt module into javascript -->
            <plugin>
                <groupId>net.ltgt.gwt.maven</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <!-- profile to compile the java code into javascript using GWT -->
        <profile>
            <id>gwt-compile</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <plugin.gwt.param.skipCompilation>false</plugin.gwt.param.skipCompilation>
            </properties>

        </profile>
    </profiles>

</project>