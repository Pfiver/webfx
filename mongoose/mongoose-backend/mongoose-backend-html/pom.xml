<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>mongoose-backend</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>mongoose-backend-html</artifactId>
    <packaging>gwt-app</packaging>

    <dependencies>

        <dependency>
            <artifactId>mongoose-logic</artifactId>
            <groupId>${mongoose.groupId}</groupId>
            <version>${mongoose.version}</version>
        </dependency>

        <!-- Now listing the sources for GWT compilation -->
        <dependency>
            <artifactId>mongoose-logic</artifactId>
            <groupId>${mongoose.groupId}</groupId>
            <version>${mongoose.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-framework</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-toolkit-html</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-toolkit</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-platform-gwt</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-abstractplatform-web</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-platform</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-commons</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-javalib-javacupruntime</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-javalib-javafxbindings</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-javalib-rxjava</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-javaemul-gwt</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-javaemul-gwt-cldc</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-javaemul-teavm-gwt-cldc</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <artifactId>naga-javaemul-shared</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-dev</artifactId>
        </dependency>

    </dependencies>

    <properties>
        <!-- Setting the GWT plugin configuration parameters -->
        <lib.gwt.version>2.8.0-rc2</lib.gwt.version>
        <plugin.gwt.version>2.8.0-beta1</plugin.gwt.version>
        <plugin.gwt.param.module>mongoose-backend-html</plugin.gwt.param.module>
        <plugin.gwt.param.skipCompilation>true</plugin.gwt.param.skipCompilation>
        <!-- Avoiding size consuming META-INF/maven/** coming dependencies (useless for this artifact) -->
        <plugin.jar.param.addMavenDescriptor>false</plugin.jar.param.addMavenDescriptor>
        <!-- But unpacking webroot resources coming from dependencies such as naga-abstractplatform-web -->
        <plugin.dependency.param.unpack-sources.phase>none</plugin.dependency.param.unpack-sources.phase>
        <plugin.dependency.param.unpack-classes.includes>webroot/**</plugin.dependency.param.unpack-classes.includes>
        <plugin.dependency.param.copy-libs.phase>none</plugin.dependency.param.copy-libs.phase>
    </properties>

    <build>
        <plugins>

            <!-- Generating the source artifact for another GWT compilation (ex: KBS) -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>

            <!-- Calling the GWT maven plugin to compile the gwt module into javascript -->
            <plugin>
                <groupId>net.ltgt.gwt.maven</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <!-- profile to compile the java code into javascript using GWT -->
        <profile>
            <id>gwt-compile</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <plugin.gwt.param.skipCompilation>false</plugin.gwt.param.skipCompilation>
            </properties>

        </profile>
    </profiles>

</project>