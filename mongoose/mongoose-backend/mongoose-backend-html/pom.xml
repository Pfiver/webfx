            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
            <scope>provided</scope> <!-- for being skipped by the shade plugin -->
        </dependency>

        <dependency>
            <artifactId>naga-platform</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
            <scope>provided</scope> <!-- for being skipped by the shade plugin -->
        </dependency>

        <dependency>
            <artifactId>naga-commons</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
            <scope>provided</scope> <!-- for being skipped by the shade plugin -->
        </dependency>

        <dependency>
            <artifactId>naga-javalib-javacupruntime</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <classifier>sources</classifier>
