<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>hellonaga</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>hellonaga-gwt</artifactId>

    <dependencies>

        <dependency>
            <artifactId>hellonaga-logic</artifactId>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
            <scope>provided</scope> <!-- No need to include this artifact in a further fat jar (only javascript files under webroot are required) -->
        </dependency>

        <dependency>
            <artifactId>naga-plat-gwt</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <scope>provided</scope> <!-- No need to include this artifact in a further fat jar (only javascript files under webroot are required) -->
        </dependency>

    </dependencies>

    <properties>
        <!-- Setting the GWT plugin configuration parameters -->
        <plugin.gwt.param.module>hellonaga</plugin.gwt.param.module>
        <plugin.gwt.param.compileSourcesArtifact1>${project.groupId}:hellonaga-logic</plugin.gwt.param.compileSourcesArtifact1>
        <plugin.gwt.param.compileSourcesArtifact2>${naga.groupId}:naga-plat-gwt</plugin.gwt.param.compileSourcesArtifact2>
        <plugin.gwt.param.compileSourcesArtifact3>${naga.groupId}:naga-abstractplat-web</plugin.gwt.param.compileSourcesArtifact3>
        <plugin.gwt.param.compileSourcesArtifact4>${naga.groupId}:naga-core</plugin.gwt.param.compileSourcesArtifact4>
        <plugin.gwt.param.compileSourcesArtifact5>${naga.groupId}:naga-javalib-javacupruntime</plugin.gwt.param.compileSourcesArtifact5>
        <!-- Avoiding size consuming META-INF/maven/** coming dependencies (useless for this artifact) -->
        <plugin.jar.param.addMavenDescriptor>false</plugin.jar.param.addMavenDescriptor>
        <!-- But unpacking webroot resources coming from dependencies such as naga-abstractplat-web -->
        <plugin.dependency.param.unpack-sources.phase>none</plugin.dependency.param.unpack-sources.phase>
        <plugin.dependency.param.unpack-classes.includes>webroot/**</plugin.dependency.param.unpack-classes.includes>
        <plugin.dependency.param.copy-libs.phase>none</plugin.dependency.param.copy-libs.phase>
    </properties>

    <build>
        <plugins>

            <!-- Calling the GWT maven plugin to compile the gwt module into javascript -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
            </plugin>

            <!-- Also unpacking webroot resources coming from dependencies such as naga-abstractplat-web -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>

            <!-- Keeping only webroot (without WEB-INF) in the artifact -->
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>webroot/**</include>
                    </includes>
                    <excludes>
                        <exclude>webroot/WEB-INF/**</exclude>
                    </excludes>
                </configuration>
            </plugin>
            
        </plugins>
    </build>

</project>