<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>naga-platforms</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>naga-platform-android</artifactId>
    <!--packaging>aar</packaging-->

    <repositories>
        <!--local repository where aar artifacts have been manually deployed through the following commands (see https://devcenter.heroku.com/articles/local-maven-dependencies):
        mvn deploy:deploy-file -Durl=file://.m2 -Dfile=aarlib/tableview-1.1.0.aar -DgroupId=de.codecrafters.tableview -DartifactId=tableview -Dpackaging=aar -Dversion=1.1.0
        mvn deploy:deploy-file -Durl=file://.m2 -Dfile=aarlib/tableview-1.1.0.jar -DgroupId=de.codecrafters.tableview -DartifactId=tableview -Dpackaging=jar -Dversion=1.1.0
        -->
        <repository>
            <id>project.local</id>
            <name>project</name>
            <url>file:${project.basedir}/.m2</url>
        </repository>
    </repositories>

    <dependencies>

        <dependency>
            <artifactId>naga-toolkit</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-abstractplatform-java</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-javalib-javafxbindings</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <!-- Android -->
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>de.codecrafters.tableview</groupId>
            <artifactId>tableview</artifactId>
            <version>1.1.0</version>
            <scope>provided</scope>
            <!--type>aar</type-->
        </dependency>

    </dependencies>

    <properties>
        <!-- Not skipping the artifact installation when the profile is activated -->
        <plugin.jar.param.addMavenDescriptor>false</plugin.jar.param.addMavenDescriptor>
        <plugin.dependency.param.unpack-sources.phase>none</plugin.dependency.param.unpack-sources.phase>
    </properties>

    <build>
        <plugins>
            <!--plugin>
                <groupId>com.simpligility.maven.plugins</groupId>
                <artifactId>android-maven-plugin</artifactId>
            </plugin-->

            <!-- Unpacking dependencies before calling retrolambda -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <includeScope>runtime</includeScope> <!-- to avoid unpacking android dependency -->
                </configuration>
            </plugin>

            <!-- Calling retrolambda -->
            <plugin>
                <groupId>net.orfjackal.retrolambda</groupId>
                <artifactId>retrolambda-maven-plugin</artifactId>
            </plugin>

            <!-- Calling Shade with the configuration defined in the parent pom -->
            <!--plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
            </plugin-->

        </plugins>
    </build>


</project>