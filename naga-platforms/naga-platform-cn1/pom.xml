<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>naga-platforms</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>naga-platform-cn1</artifactId>
    <packaging>jar</packaging>

    <repositories>
        <!--local repository where cn1 artifacts have been manually deployed through the following commands (see https://devcenter.heroku.com/articles/local-maven-dependencies):
        mvn deploy:deploy-file -Durl=file://.m2 -Dfile=cn1/lib/CodenameOne.jar -DgroupId=com.codename1 -DartifactId=codename1 -Dpackaging=jar -Dversion=3.3
        mvn deploy:deploy-file -Durl=file://.m2 -Dfile=cn1/lib/cn1-websockets.zip -DgroupId=shannah -DartifactId=cn1-websockets -Dpackaging=jar -Dversion=1.2.1
        -->
        <repository>
            <id>project.local</id>
            <name>project</name>
            <url>file:${project.basedir}/.m2</url>
        </repository>
    </repositories>

    <dependencies>

        <dependency>
            <groupId>com.codename1</groupId>
            <artifactId>codename1</artifactId>
            <version>3.3</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>shannah</groupId>
            <artifactId>cn1-websockets</artifactId>
            <version>1.2.1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <artifactId>naga-platform</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency> <!-- because of ServiceLoader -->
            <artifactId>naga-toolkit</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <artifactId>naga-javalib-javacupruntime</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-javalib-rxjava</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-javalib-javafxbindings</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-javaemul-cldc</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-javaemul-gwt-cldc</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency>
            <artifactId>naga-javaemul-teavm-gwt-cldc</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

    </dependencies>

    <properties>
        <!-- Disabling the default behaviour defined in the parent pom for the dependency plugin -->
        <plugin.dependency.param.unpack-sources.phase>none</plugin.dependency.param.unpack-sources.phase>
        <plugin.dependency.param.unpack-classes.phase>none</plugin.dependency.param.unpack-classes.phase>
        <plugin.dependency.param.copy-libs.phase>none</plugin.dependency.param.copy-libs.phase>
        <!-- deactivating j2objc task in default parent pom antrun configuration -->
        <plugin.antrun.param.j2objc.phase>none</plugin.antrun.param.j2objc.phase>
    </properties>

    <build>
        <plugins>

            <!-- Generating the source artifact -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>

            <!-- Creating a fat jar with sources (this module + all dependencies) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <shadedArtifactAttached>false</shadedArtifactAttached>
                            <createSourcesJar>true</createSourcesJar>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Providing all sources for the CN1 project by unpacking them in the src folder -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${naga.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>sources</classifier>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                            <includes>**/*.java</includes>
                            <outputDirectory>${project.basedir}/cn1/src</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Next steps are manuals... -->
            <!-- 1) Add an emul package in the CN1 project sources -->
            <!-- 2) Use IDEA to refactor the java package and move it under the emul package (otherwise it will be ignored by the CN1 build server) -->
            <!-- 3) Open the CN1 project and compile the library, this will produce/update the dist/naga-platform-cn1.cn1lib file -->

            <!-- Now assuming the above is done, let's make an artifact with cn1lib classifier that will include the cn1 libraries (this one + the websocket) -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy toDir="${project.build.outputDirectory}">
                                    <fileset dir="${project.basedir}/cn1/dist">
                                        <include name="*.cn1lib"/>
                                    </fileset>
                                    <fileset dir="${project.basedir}/cn1/lib">
                                        <include name="*.cn1lib"/>
                                    </fileset>
                                </copy>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Making the cn1lib artifact (cn1lib classifier) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>cn1lib</classifier>
                            <includes>
                                <include>*.cn1lib</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

</project>