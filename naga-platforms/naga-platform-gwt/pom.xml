<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>naga-platforms</artifactId>
        <groupId>naga</groupId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>naga-platform-gwt</artifactId>
    <packaging>jar</packaging>

    <dependencies>

        <dependency>
            <artifactId>naga-abstractplatform-web</artifactId>
            <groupId>${naga.groupId}</groupId>
            <version>${naga.version}</version>
        </dependency>

        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
        </dependency>

    </dependencies>

    <properties>
        <!-- Disabling the default behaviour defined in the parent pom for the dependency plugin -->
        <plugin.dependency.param.unpack-sources.phase>none</plugin.dependency.param.unpack-sources.phase>
        <plugin.dependency.param.unpack-classes.phase>none</plugin.dependency.param.unpack-classes.phase>
        <plugin.dependency.param.copy-libs.phase>none</plugin.dependency.param.copy-libs.phase>
    </properties>

    <build>
        <plugins>

            <!-- Extending the java runtime GWT support by copying some portable version of java packages into the super sources -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-java-super-sources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <!-- Some java classes under java package to be put in the GWT super source directory to extend the JRE emulation (required by the naga core or third party libraries) -->
                                <artifactItem>
                                    <artifactId>naga-javaemul-gwt</artifactId>
                                    <groupId>${naga.groupId}</groupId>
                                    <version>${naga.version}</version>
                                    <classifier>shaded-sources</classifier>
                                </artifactItem>
                                <artifactItem>
                                    <artifactId>naga-javaemul-javatime</artifactId>
                                    <groupId>${naga.groupId}</groupId>
                                    <version>${naga.version}</version>
                                    <classifier>shaded-sources</classifier>
                                </artifactItem>
                            </artifactItems>
                            <excludes>**/module-info.java</excludes>
                            <outputDirectory>${project.build.outputDirectory}/super</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Generating the source artifact for GWT compilation -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>